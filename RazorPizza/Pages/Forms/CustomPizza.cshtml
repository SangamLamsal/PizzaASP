@page
@model RazorPizza.Pages.Forms.CustomPizzaModel
@{
}

<div class="text-center container">
    <h1>Create Your Own Pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 pb-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Enter the Pizza name.." />
        <br />
        <input type="checkbox" asp-for="Pizza.TomatoSauce" />Tomato
        <br /><input type="checkbox" asp-for="Pizza.Cheese" />Cheese
        <br /><input type="checkbox" asp-for="Pizza.Peperoni" />Peperoni
        <br /><input type="checkbox" asp-for="Pizza.Mushroom" />Mushroom
        <br /><input type="checkbox" asp-for="Pizza.Tuna" />Tuna
        <br /><input type="checkbox" asp-for="Pizza.Pineapple" />Pineapple
        <br /><input type="checkbox" asp-for="Pizza.Ham" />Ham
        <br /><input type="checkbox" asp-for="Pizza.Beef" />Beef
        <br />
        <button class="btn btn-primary mt-1" type="submit">Order My pizza</button>
    </form>
</div>